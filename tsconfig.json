{
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "target": "ES5",
        "declaration": true,
        "outDir": "./dist"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
