    },
    "license": "MIT",
    "scripts": {
        "build": "npm run clear & npm run build:project",
        "build:project": "npx tsc --project tsconfig.build.json",
        "clear": "rm -rf ./dist & rm *.tgz",
        "compile": "npm run clear & npm run compile:project",
        "compile:project": "npx tsc --project tsconfig.compile.json",
        "dev": "npx ts-node -T src/index.ts",
        "pack": "npm pack",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bojangles-m/seconds-formater"
    },
